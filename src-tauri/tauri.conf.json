{
  "package": {
    "productName": "TSV Converter",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "../build",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "",
    "beforeBuildCommand": "yarn build"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": ["bin/ffmpeg", "bin/ffprobe"],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "TinyCircuits TinyScreen Video (TSV) converter.",
      "longDescription": "TinyCircuits TinyScreen Video (TSV) converter.",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "dialog": {
        "open": true,
        "save": true
      },
      "globalShortcut": {
        "all": true
      },
      "protocol": {
        "asset": true
      },
      "shell": {
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "bin/ffmpeg",
            "cmd": "bin/ffmpeg",
            "sidecar": true,
            "args": true
          },
          {
            "name": "bin/ffprobe",
            "cmd": "bin/ffprobe",
            "sidecar": true,
            "args": true
          }
        ]
      }
    },
    "windows": [
      {
        "title": "TSV Converter ðŸ˜ŽðŸ“º",
        "width": 800,
        "height": 600,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src: 'self'; media-src 'self' asset: https://asset.localhost"
    }
  }
}
